<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/txtubicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Ubicaciones del Cliente"
            android:textColor="?android:attr/colorActivatedHighlight"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/idemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. Correlativo:     "
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <TextView
            android:id="@+id/nombre_completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre completo"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/dui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DUI"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/Regresar"
                android:name= "de.androidbuch.activiti.task.TaskDetailsFragment"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="?android:attr/colorActivatedHighlight"
                android:text="Regresar"
                android:textColor="@android:color/background_light"
                android:onClick="onClick"
                android:gravity="center"/>

            <Button
                android:id="@+id/ActualizarUbicacion"
                android:name= "de.androidbuch.activiti.task.TaskDetailsFragment"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="?android:attr/colorActivatedHighlight"
                android:text="Actualizar ubicaciones"
                android:textColor="@android:color/background_light"
                android:onClick="onClick"
                android:gravity="center"/>
        </LinearLayout>
            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MapsActivity" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

